<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_header_height"
              android:background="@drawable/header_bg"
              android:gravity="bottom"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin_16"
              android:paddingLeft="@dimen/activity_horizontal_margin_16"
              android:paddingRight="@dimen/activity_horizontal_margin_16"
              android:paddingTop="@dimen/activity_vertical_margin_16"
              android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/header_avatar_size_60"
        android:layout_height="@dimen/header_avatar_size_60"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/header_avatar"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/nav_header_text_flix"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_text_roulette"/>

</LinearLayout>
